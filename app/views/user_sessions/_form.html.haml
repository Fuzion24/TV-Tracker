= form_for @user_session do |f|
  -if @user_session.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_session.errors.count, "error")} prohibited this user_session from being saved:"
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :handle
    = f.text_field :handle
  .field
    = f.label :password
    = f.password_field :password
  .actions
    = f.submit 'Save'
