%table#favshows{:class => "table table-striped"}
  %thead
    %tr
      %th
      %th Show Name
      %th Network
      %th Air Time
      %th Last Airing
      %th Next Airing
  %tbody
    - @user_shows.each do |tv_show|
      %tr
        %td
          =image_tag(tv_show.icon(:medium))
        %td 
          =tv_show.name
        %td
          =tv_show.network
        %td
          =tv_show.air_time
        %td
          =TvShowsHelper.last_air_date(tv_show)
        %td
          =TvShowsHelper.next_air_date(tv_show)

-content_for :head do
  =javascript_include_tag "jquery.tablesorter.min.js"
  =stylesheet_link_tag "sorted_table.css"

:javascript
  $(document).ready(function()
      { 
          $("#favshows").tablesorter({sortList: [[1,0]]} ); //initial sort on show name
      } 
  ); 